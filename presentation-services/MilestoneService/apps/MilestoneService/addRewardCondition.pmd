                },
                {
                    "type": "date",
                    "id": "tenure",
                    "label": "Tenure",
                    "valueOutBinding": "rewardConditionPost.tenure",
                    "required": "true"
                }
            ]
        },
        "footer": {
            "type": "footer",
            "children": [
                {
                    "type": "richText",
